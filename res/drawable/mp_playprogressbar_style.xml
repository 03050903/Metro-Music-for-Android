    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:id="@android:id/background">  
        <shape>  
            <corners android:radius="0dip" />  
            <gradient  
                    android:startColor="#1C86EE"  
                    android:centerColor="#1C86EE"  
                    android:centerY="0.75"  
                    android:endColor="#1C86EE"  
                    android:angle="0"  
            />  
        </shape>  
    </item>  
      
    <item android:id="@android:id/secondaryProgress">  
        <clip>  
            <shape>  
                <corners android:radius="0dip" />  
                <gradient  
                        android:startColor="#B5B5B5"  
                        android:centerColor="#B5B5B5"  
                        android:centerY="0.75"  
                        android:endColor="#B5B5B5"  
                        android:angle="0"  
                />  
            </shape>  
        </clip>  
    </item>  
    <item android:id="@android:id/progress">  
        <clip>  
            <shape>  
                <corners  
                    android:radius="0dip" />  
                <gradient  
                    android:startColor="#00688B"  
                    android:endColor="#00688B"  
                    android:angle="0" />  
            </shape>  
        </clip>  
    </item>  
      
    </layer-list>  